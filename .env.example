# Database
# For local development (you'll need to change schema.prisma provider to "sqlite")
# DATABASE_URL="file:./dev.db"

# For production with PostgreSQL (use one of these providers):
# Vercel Postgres: Get from Vercel dashboard (use POSTGRES_PRISMA_URL)
# Neon: postgresql://user:password@host/dbname?sslmode=require
# Supabase: postgresql://user:password@host:6543/postgres?pgbouncer=true
DATABASE_URL="postgresql://user:password@host:port/database"

# NextAuth
# For local development
NEXTAUTH_URL="http://localhost:3000"
# For production - replace with your Vercel URL
# NEXTAUTH_URL="https://your-project.vercel.app"

# Generate a new secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"
